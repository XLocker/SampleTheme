<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="12dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/download_dialog_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="148dip"
                android:scaleType="centerCrop"
                android:src="@drawable/app_avator" />

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:layout_marginTop="15dip"
                android:text="@string/need_locker_app"
                android:textColor="#ff248fb3"
                android:textSize="18.0sp"
                android:typeface="serif" />
        </LinearLayout>

        <Button
            android:id="@+id/ok"
            android:layout_width="fill_parent"
            android:layout_height="42.0dip"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/download_button_bg"
            android:gravity="center"
            android:paddingLeft="36.0dip"
            android:paddingRight="36.0dip"
            android:shadowColor="#55000000"
            android:shadowDx="0.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:text="@android:string/ok"
            android:textColor="#FFFFFFFF"
            android:textSize="18.0sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>